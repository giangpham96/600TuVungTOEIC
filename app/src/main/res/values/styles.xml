<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ButtonSubmit" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/primary_dark</item>
        <item name="colorButtonNormal">@color/primary</item>
    </style>

    <style name="ButtonReset" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#d20400</item>
        <item name="colorButtonNormal">#ed0008</item>
    </style>
</resources>
