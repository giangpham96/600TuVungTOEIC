<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="one.marshangeriksen.loloaldrin.myapplication.HighScoreActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarHigh"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        app:title="HighScore"
        app:titleTextColor="@color/white" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcvHighScore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarHigh"
        android:layout_margin="@dimen/grid_item_padding_size"
        android:orientation="vertical"
        android:padding="@dimen/grid_item_padding_size"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        app:spanCount="2" />
</RelativeLayout>
