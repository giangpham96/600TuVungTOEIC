<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/grid_item_padding_size">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btnSound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/grid_item_padding_size"
            android:background="@drawable/icon_sound" />

        <TextView
            android:id="@+id/tvFileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/btnSound"
            android:layout_toStartOf="@+id/btnSound"
            android:maxLines="1"
            android:padding="@dimen/grid_item_padding_size"
            android:textColor="@color/primary"
            android:textSize="20sp"
            tools:text="record_1234567890123" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvFileName"
            android:maxLines="1"
            android:padding="@dimen/grid_item_padding_size"
            android:textColor="@color/secondary_text"
            tools:text="Mon 14/3/2017" />

        <TextView
            android:id="@+id/tvLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvFileName"
            android:layout_toEndOf="@id/tvDate"
            android:layout_toLeftOf="@+id/btnSound"
            android:layout_toRightOf="@+id/tvDate"
            android:layout_toStartOf="@+id/btnSound"
            android:gravity="center"
            android:maxLines="1"
            android:padding="@dimen/grid_item_padding_size"
            android:textColor="@color/secondary_text"
            android:textStyle="italic"
            tools:text="0:33" />
    </RelativeLayout>
</android.support.v7.widget.CardView>